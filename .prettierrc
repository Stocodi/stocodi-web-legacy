{
    "arrowParens": "always",
    "bracketSpacing": true,

    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,

    "singleQuote": false,
    "quoteProps": "as-needed",

    "printWidth": 150,
    "tabWidth": 4,
    "useTabs": false,

    "semi": true,
    "trailingComma": "all",

    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^react",
        "<THIRD_PARTY_MODULES>",

        "^(.)*(/)(components)(.*)$",
        "^(.)*(/)(pages)(.*)$",
        "^(.)*(/)(hooks)(.*)$",
        "^(.)*(/)(assets)(.*)$",

        "^(.)*(/)(constants)(.*)$|^(.)*(/)(utils)(.*)",

        "^(.)*(/)(api)(.*)$",
        "^(.)*(/)(store)(.*)$|^@reduxjs",

        "(.module.scss)$",
        "(.scss)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": false
}
